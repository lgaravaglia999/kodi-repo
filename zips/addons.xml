<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.streaming.cava" name="Streaming Italiano" version="0.2.0" provider-name="Luca">
    <requires>
        <import addon="xbmc.python" version="2.24.0"/>
        <import addon="script.module.routing" version="0.2.0"/>
        <import addon="script.module.simplejson" version="3.3.0"/>
        <import addon="script.module.urlresolver" version="5.0.47"/>
        <import addon="script.module.beautifulsoup4" version="4.5.3"/>
        <import addon="script.module.requests" version="2.22.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="route.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">streaming film e serie tv</summary>
        <description lang="en_GB"></description>
        <language></language>
        <platform>android linux</platform>
        <license>MIT</license>
        <forum></forum>
        <website></website>
        <email></email>
        <source></source>
        <news></news>
        <disclaimer></disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

<addon id="repository.cava" name="kodi-repo" version="1.0" provider-name="lgaravaglia999">
    <extension point="xbmc.addon.repository" name="Example Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/lgaravaglia999/kodi-repo/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/lgaravaglia999/kodi-repo/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/lgaravaglia999/kodi-repo/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>REPO_NAME_HERE</summary>
        <description>DESCRIPTION OF YOUR REPO HERE</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
